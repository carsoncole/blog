= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :summary
    = f.text_field :summary
  .field
    = f.label :author
    = f.text_field :author
  .field
    = f.label :date
    = f.date_field :date
  .field
    = f.label :is_published
    = f.check_box :is_published
  .actions
    = f.submit 'Save'
