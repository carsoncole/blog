%h1 Listing posts

%table
  %thead
    %tr
      %th Title
      %th Summary
      %th Author
      %th Date
      %th Is published
      %th
      %th
      %th

  %tbody
    - @posts.each do |post|
      %tr
        %td= post.title
        %td= post.summary
        %td= post.author
        %td= post.date
        %td= post.is_published
        %td= link_to 'Show', post
        %td= link_to 'Edit', edit_post_path(post)
        %td= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Post', new_post_path
