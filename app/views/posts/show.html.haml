#post
  %article
    .row
      .col-md-12
        %h1= @post.title

    .row
      .col-md-8

        %p= @post.content


        %br
        %p.author= @post.author
        .date.small= @post.date.strftime("%B %d, %Y")

      .col-md-4
        - if @post.image.attached? && @post.image.representable?
          = image_tag @post.image.representation(resize_to_limit: [500, nil])

.row.d-print-none
  .col-md-5
    %p= link_to "All Posts", root_path
