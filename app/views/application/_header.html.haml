%nav.navbar.navbar-expand-lg.navbar-dark.main-navbar.d-print-none
  .container-fluid
    = link_to image_tag("logo.png", height: "15px", alt: 'NUKU Logo'), root_path, class: 'navbar-brand'
    %button.navbar-toggler(type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation")
      %span.navbar-toggler-icon
    - if signed_in?
      %div
        = link_to "New Post", new_post_path
        \|
        = link_to "Posts", posts_path

      = button_to "Sign out", sign_out_path, method: :delete, class: 'btn btn-sm btn-primary'
